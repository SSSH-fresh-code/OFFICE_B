generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  name        String @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  permissions Permission[] @relation("UserPermissions")
  posts Post[]
}

model Permission {
  name        String   @id
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]   @relation("UserPermissions")
}

model ChatBot {
  id          Int           @id @default(autoincrement())
  botId       String        @unique
  token       String        @unique
  name        String        @unique
  description String
  type        MessengerType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  chats       Chat[]        @relation("ChatBotChats")
}

model Chat {
  id     Int           @id @default(autoincrement())
  chatId String        @unique
  name   String        @unique
  type   MessengerType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  bots   ChatBot[]     @relation("ChatBotChats")
}


model Topic {
  id     Int           @id @default(autoincrement())
  name   String        @unique
  series Series[]
  posts Post[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Series {
  id     Int           @id @default(autoincrement())
  name   String  @unique
  topic   Topic @relation(fields: [topicId], references: [id])
  topicId Int
  posts Post[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Post {
  title String @id
  content String @db.Text
  thumbnail String? 
  author User @relation(fields: [authorId], references: [id])
  authorId String
  topic Topic @relation(fields: [topicId], references: [id])
  topicId Int
  series Series @relation(fields: [seriesId], references: [id])
  seriesId Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum MessengerType {
  TELEGRAM
  SLACK
  DISCORD
}
